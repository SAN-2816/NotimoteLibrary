<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageButton
        android:id="@+id/notimote_ImageButton_exit"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:src="@drawable/ic_baseline_exit_24" />
    <ImageButton
        android:id="@+id/notimote_ImageButton_home"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:src="@drawable/ic_baseline_home_24" />
    <ImageButton
        android:id="@+id/notimote_ImageButton_before"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:src="@drawable/ic_baseline_before_24" />
</LinearLayout>