<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    tools:ignore="MissingDefaultResource">

    <ImageButton
        android:id="@+id/notimote_ImageButton_rewind"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:src="@drawable/ic_baseline_fast_rewind_24"
        android:background="@color/rewind"/>

    <ImageButton
        android:id="@+id/notimote_ImageButton_stop"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:src="@drawable/ic_baseline_stop_24"
        android:background="@color/stop"/>

    <ImageButton
        android:id="@+id/notimote_ImageButton_play"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:src="@drawable/ic_baseline_play_arrow_24"
        android:background="@color/play"/>

    <ImageButton
        android:id="@+id/notimote_ImageButton_forward"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:src="@drawable/ic_baseline_fast_forward_24"
        android:background="@color/forward"/>
</LinearLayout>